<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/roundborder_toron"
    android:backgroundTint="#FFFBD2"
    android:minHeight="200dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:id="@+id/Tv_room_subject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="논제 내용"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chat_bubble_24"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의견 수"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:id="@+id/Tv_message_num"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_supervisor_account_24"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원 수"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:id="@+id/Tv_participate_num"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/Tv_room_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="토론 내용"
                android:textSize="15dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <Button
            android:layout_gravity="center"
            android:backgroundTint="#A7EF68"
            android:text="참여"
            android:textSize="15dp"
            android:id="@+id/btn_enter"
            android:background="@drawable/roundborder"
            android:layout_width="80dp"
            android:layout_height="95dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Img_profile_img"
            android:src="@drawable/ic_baseline_account_circle_24"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/Tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"/>
        <Space
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                   android:text="토론 시작날짜"/>
                <TextView
                    android:id="@+id/Tv_Start_date"
                    android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2021.xx.xx"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="토론 종료날짜"/>
            <TextView
                android:id="@+id/Tv_End_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-xx"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>