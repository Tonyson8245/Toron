<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/roundborder_toron"
    android:minHeight="200dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:id="@+id/Tv_vote_subject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="투표 제목"
            android:textSize="20dp"/>
<!--        <ImageView-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_baseline_remove_red_eye_24"/>-->
<!--        <TextView-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="조회 수"-->
<!--            android:layout_marginRight="8dp"-->
<!--            android:textSize="13dp"-->
<!--            android:id="@+id/Tv_view_num"/>-->
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_supervisor_account_24"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원 수"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:id="@+id/Tv_participate_num"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/Tv_vote_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="내용"
                android:textSize="15dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--  투표 했을 경우 이 형식으로 보여줌-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/graphLayout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10dp"
                android:textColor="#0057EF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="찬성"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingHorizontal="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Tv_pro"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#0057EF"
                    android:gravity="center"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Tv_con"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F43131"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#F43131"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="반대"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 투표를 안했을 경우 아래의 형식으로 보여줌   -->
    <Button
        android:visibility="gone"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn_enter_vote"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="13dp"
        android:backgroundTint="#A7EF68"
        android:text="투표에 참여하고, 결과를 확인하세요"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Img_profile_img"
            android:src="@drawable/ic_baseline_account_circle_24"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/Tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"/>
        <Space
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="투표 시작날짜" />

                <TextView
                    android:id="@+id/Tv_Start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021.xx.xx" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="투표 종료까지"/>
            <TextView
                android:id="@+id/Tv_End_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-xx"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>