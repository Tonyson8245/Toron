<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:id="@+id/btn_back"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:id="@+id/Tv_subject"
            android:textColor="#4C4A4A"
            android:textSize="25dp"
            android:hint="투표명"
            android:textStyle="bold" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btn_show_detail"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="토론 내용"/>
    </LinearLayout>

    <ScrollView
        android:padding="10dp"
        android:id="@+id/layout_debate_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="@drawable/roundborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토론 내용 설명"
                    android:textSize="13dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginVertical="15dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#2B2B2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요 의견 TOP3">
            </TextView>
            <LinearLayout
                android:background="#39C2D7FB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundborder"
                    android:backgroundTint="#C2D7FB"
                    android:text="찬성 측 의견"
                    android:textSize="15dp"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pro_top_recyclerview"/>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:background="#27FB8888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:background="@drawable/roundborder"
                    android:backgroundTint="#FB8888"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반대 측 의견">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/con_top_recyclerview"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:textColor="#2B2B2B"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginVertical="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부 기사">
            </TextView>
            <LinearLayout
                android:background="#39C2D7FB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:background="@drawable/roundborder"
                    android:backgroundTint="#C2D7FB"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찬성 측">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pros_recyclerview"/>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:background="#39FB8888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:background="@drawable/roundborder"
                    android:backgroundTint="#FB8888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반대 측">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cons_recyclerview"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/dabate_recyclerview"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7CDC7"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tag_layout">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Tv_tag_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임: "
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_close_24"
            android:id="@+id/btn_tag_close"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_img_attach"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/btn_img_attach_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_close_24"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_send_img"
                android:layout_width="70dp"
                android:text="전송"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/Img_attach_img"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
    </LinearLayout>
</LinearLayout>